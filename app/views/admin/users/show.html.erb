<h1>ユーザー情報</h1>
<ul class="base">
  基本情報
  <li>名前: <%= @user.name %></li>
  <li>メール: <%= @user.email %></li>
</ul>

<ul class="groups">
  <h2>界隈一覧</h2>
  <% @groups.each do |user_group| %>
    <li>
      <%= user_group.group.name %>
    </li>
  <% end %>
</ul>

<ul class="microposts">
  <h2>投稿一覧</h2>
  <% @user.microposts.each do |micropost| %>
    <li><%= micropost.content %></li>
  <% end %>
</ul>