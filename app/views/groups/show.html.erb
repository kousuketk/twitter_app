<% provide(:title, 'All users') %>
<h1>界隈ユーザー</h1>

<p>user search</p>
<%= form_tag(group_path, :method => 'get' ) do %>
  <%= text_field_tag :search, @search %>
  <%= submit_tag 'Search' %>
<% end %>
<%= link_to '招待する', invitable_users_group_path, class: 'btn btn-default pull-right' %>
<%= will_paginate @users %>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 50 %>
      <%= link_to user.name, user_path(user) %>
    </li>
  <% end %>
</ul>
<%= will_paginate @users %>